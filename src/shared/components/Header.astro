---
import CartButton from '../../features/cart/CartButton';
---

<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-xl border-b border-gray-200/50">
  <nav class="max-w-7xl mx-auto px-8 h-14">
    <div class="flex items-center justify-between h-full">
      <!-- Logo -->
      <a href="/" class="text-2xl font-semibold tracking-tight text-gray-900 hover:text-gray-600 transition-colors">
        ArteNatural
      </a>

      <!-- Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/catalogo" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
          Catálogo
        </a>
        <a href="/catalogo/ceramica" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
          Cerámicas
        </a>
        <a href="/catalogo/hierro" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
          Hierro
        </a>
        <a href="/catalogo/aromaterapia" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
          Aromaterapia
        </a>
      </div>

      <!-- Actions -->
      <div class="flex items-center">
        <CartButton client:load />
      </div>
    </div>
  </nav>
