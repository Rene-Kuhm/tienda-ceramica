---
import Layout from '../shared/layouts/Layout.astro';
import Header from '../shared/components/Header.astro';
import Footer from '../shared/components/Footer.astro';
import { getCollection } from 'astro:content';

const products = await getCollection('products');
const featuredProducts = products.filter(p => p.data.featured).slice(0, 3);
const categories = await getCollection('categories');
---

<Layout title="ArteNatural - Cerámicas, Hierro y Aromaterapia">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-emerald-50 to-teal-100 py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl">
          <h1 class="text-5xl font-bold text-gray-900 mb-6">
            Arte Natural para tu Hogar
          </h1>
          <p class="text-xl text-gray-700 mb-8">
            Descubre nuestra colección de cerámicas artesanales, trabajos en hierro únicos y productos de aromaterapia natural.
          </p>
          <a
            href="/catalogo"
            class="inline-block bg-emerald-600 text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-emerald-700 transition-colors"
          >
            Ver Catálogo
          </a>
        </div>
      </div>
    </section>

    <!-- Categories Section -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Nuestras Categorías</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {categories.map((category) => (
            <a
              href={`/catalogo/${category.data.slug}`}
              class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-shadow"
            >
              <div class="aspect-[4/3] bg-gradient-to-br from-emerald-100 to-teal-200 flex items-center justify-center">
                <span class="text-6xl opacity-20">
                  {category.data.slug === 'ceramica' && '🏺'}
                  {category.data.slug === 'hierro' && '⚒️'}
                  {category.data.slug === 'aromaterapia' && '🌿'}
                </span>
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end">
                <div class="p-6 text-white">
                  <h3 class="text-2xl font-bold mb-2">{category.data.name}</h3>
                  <p class="text-gray-200">{category.data.description}</p>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Featured Products -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Productos Destacados</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {featuredProducts.map((product) => (
            <a
              href={`/producto/${product.id}`}
              class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden group"
            >
              <div class="aspect-square bg-gray-100 flex items-center justify-center">
                <span class="text-4xl opacity-30">
                  {product.data.category === 'ceramica' && '🏺'}
                  {product.data.category === 'hierro' && '⚒️'}
                  {product.data.category === 'aromaterapia' && '🌿'}
                </span>
              </div>
              <div class="p-6">
                <h3 class="font-semibold text-lg mb-2">{product.data.name}</h3>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2">{product.data.description}</p>
                <span class="text-2xl font-bold text-emerald-600">
                  ${product.data.price.toLocaleString('es-AR')}
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
